<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Blue action bar style -->
    <style name="Theme.Hackillinois_blue_actionbar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_hackillinois_blue_actionbar</item>
        <item name="popupMenuStyle">@style/PopupMenu.Hackillinois_blue_actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Hackillinois_blue_actionbar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Hackillinois_blue_actionbar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Hackillinois_blue_actionbar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Hackillinois_blue_actionbar</item>
        <item name="background">@color/hackillinois_blue_tran</item>
        <item name="actionModeBackground">@drawable/cab_background_top_hackillinois_blue_actionbar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_hackillinois_blue_actionbar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Hackillinois_blue_actionbar</item>
        <item name="windowActionBarOverlay">true</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Hackillinois_blue_actionbar.Widget</item>
    </style>

    <!-- this is for transluscent bar compatibility-->
    <style name="Theme.Hackillinois_blue_actionbar.transCompat" parent="@style/Theme.Hackillinois_blue_actionbar">
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Hackillinois_blue_actionbar.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Hackillinois_blue_actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Hackillinois_blue_actionbar</item>
    </style>

    <!-- Red action bar style -->
    <style name="Theme.Hackillinois_red_actionbar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_hackillinois_red_actionbar</item>
        <item name="popupMenuStyle">@style/PopupMenu.Hackillinois_red_actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Hackillinois_red_actionbar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Hackillinois_red_actionbar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Hackillinois_red_actionbar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Hackillinois_red_actionbar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_hackillinois_red_actionbar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_hackillinois_red_actionbar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Hackillinois_red_actionbar</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Hackillinois_red_actionbar.Widget</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Hackillinois_red_actionbar.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Hackillinois_red_actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Hackillinois_red_actionbar</item>
    </style>

    <!-- This isn't working :( -->
    <style name="Theme.Hackillinois.Launcher" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/LauncherAnimation</item>
    </style>
</resources>