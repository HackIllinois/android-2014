<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Blue action bar style -->
    <style name="Theme.Hackillinois_blue_actionbar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_hackillinois_blue_actionbar</item>
        <item name="popupMenuStyle">@style/PopupMenu.Hackillinois_blue_actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Hackillinois_blue_actionbar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Hackillinois_blue_actionbar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Hackillinois_blue_actionbar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Hackillinois_blue_actionbar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_hackillinois_blue_actionbar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_hackillinois_blue_actionbar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Hackillinois_blue_actionbar</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Hackillinois_blue_actionbar.Widget</item>

    </style>

    <style name="ActionBar.Solid.Hackillinois_blue_actionbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_hackillinois_blue_actionbar</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_hackillinois_blue_actionbar</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_hackillinois_blue_actionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Hackillinois_blue_actionbar</item>
    </style>

    <style name="ActionBar.Transparent.Hackillinois_blue_actionbar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_hackillinois_blue_actionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Hackillinois_blue_actionbar</item>
    </style>

    <style name="PopupMenu.Hackillinois_blue_actionbar" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hackillinois_blue_actionbar</item>
    </style>

    <style name="DropDownListView.Hackillinois_blue_actionbar" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_hackillinois_blue_actionbar</item>
    </style>

    <style name="ActionBarTabStyle.Hackillinois_blue_actionbar" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_hackillinois_blue_actionbar</item>
    </style>

    <style name="DropDownNav.Hackillinois_blue_actionbar" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_hackillinois_blue_actionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hackillinois_blue_actionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_hackillinois_blue_actionbar</item>
    </style>

    <style name="ProgressBar.Hackillinois_blue_actionbar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_hackillinois_blue_actionbar</item>
    </style>

    <style name="ActionButton.CloseMode.Hackillinois_blue_actionbar" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_hackillinois_blue_actionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Hackillinois_blue_actionbar.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Hackillinois_blue_actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Hackillinois_blue_actionbar</item>
    </style>





